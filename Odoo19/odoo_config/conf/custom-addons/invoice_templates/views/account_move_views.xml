<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherit Account Move Form View to add Template Selection and Download Button -->
    <record id="view_move_form_inherit_template" model="ir.ui.view">
        <field name="name">account.move.form.inherit.template</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add template selection field -->
            <xpath expr="//div[@name='due_date']" position="after">
                <field name="invoice_template_id"
                       invisible="move_type not in ['out_invoice', 'out_refund']"
                       options="{'no_create': True, 'no_edit': True}"/>
            </xpath>

            <!-- Add optional subject field -->
            <xpath expr="//field[@name='invoice_template_id']" position="after">
                <field name="invoice_subject"
                       invisible="move_type not in ['out_invoice', 'out_refund']"
                       placeholder="Optional subject line for the invoice"/>
            </xpath>

            <!-- Add optional representative field -->
            <xpath expr="//field[@name='invoice_subject']" position="after">
                <field name="invoice_representative"
                       invisible="move_type not in ['out_invoice', 'out_refund']"
                       placeholder="Optional representative name for the invoice"/>
            </xpath>

            <!-- Add custom PDF download button in button box -->
            <!-- <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_download_template_pdf"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download"
                        invisible="move_type not in ['out_invoice', 'out_refund']"
                        string="Download Template PDF"
