                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Template PDF</span>
                    </div>
                </button>
            </xpath> -->

            <!-- Add prominent header buttons -->
            <xpath expr="//header" position="inside">
                <button name="action_download_template_pdf"
                        type="object"
                        class="btn-primary"
                        invisible="move_type not in ['out_invoice', 'out_refund']"
                        string="ðŸ“„ Download Invoice PDF"
                        help="Download PDF using the selected invoice template"/>
                    <!-- <button name="action_download_action_basin_pdf"
                            type="object"
                            class="btn-secondary"
                            invisible="move_type not in ['out_invoice', 'out_refund']"
                            string="ðŸŽ¨ Download Action Basin PDF"
                            help="Download PDF using Action Basin template directly (for testing)"/> -->
            </xpath>
        </field>
    </record>
    
    <!-- Dedicated Invoice Template Settings View -->
    <record id="view_invoice_template_config_settings" model="ir.ui.view">
        <field name="name">invoice.template.config.settings</field>
        <field name="model">invoice.template.config.settings</field>
        <field name="arch" type="xml">
            <form string="Invoice Template Settings" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <sheet>
                    <div class="o_setting_container">
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box row">
                                <div class=" col-12 col-lg-7">
                                    <field name="default_invoice_template_id"/>
                                </div>
                                <div class=" col-12 col-lg-5">
                                    <label for="default_invoice_template_id" string="Default Invoice Template"/>
                                    <div class="text-muted">
                                        Choose the default template for invoice reports
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <button name="%(invoice_templates.action_invoice_template)d"
                                                    type="action"
                                                    string="Configure Templates"
                                                    class="btn-link"
                                                    icon="fa-arrow-right"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>
