<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action Basin Invoice Template - Completely Self-contained -->
    <template id="report_invoice_action_basin">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!-- Use basic layout without external_layout to avoid default headers/footers -->
                <div class="article o_report_layout_standard">
                    <div class="page" style="font-family: Arial, sans-serif; color: #333; line-height: 1.4; margin: 0; padding: 20px; background: white; width: 100%;">

                        <!-- Embedded CSS for complete control -->
                        <style>
                            /* Reset default styling but preserve necessary spacing */
                            * {
                                list-style: none !important;
                                box-sizing: border-box !important;
                            }

                            body, html {
                                margin: 0 !important;
                                padding: 0 !important;
                                background: white !important;
                                font-family: Arial, sans-serif !important;
                                color: #333 !important;
                            }

                            .page {
                                margin: 0 auto !important;
                                padding: 20px !important;
                                background: white !important;
                                max-width: none !important;
                                width: 100% !important;
                            }

                            /* Remove any default Odoo elements */
                            .header, .footer, .o_company_1_layout {
                                display: none !important;
                            }

                            /* Ensure clean table styling */
                            table {
                                border-collapse: collapse !important;
                                width: 100% !important;
                            }

                            /* Remove any unwanted content */
                            ul, ol, li {
                                list-style: none !important;
                                margin: 0 !important;
                                padding: 0 !important;
                            }

                            ul:before, ol:before, li:before {
                                content: none !important;
                                display: none !important;
                            }

                            /* Print-specific styles for PDF generation */
                            @media print {
                                .page {
                                    margin: 0 !important;
                                    padding: 15px !important;
                                    width: 100% !important;
                                    max-width: none !important;
                                }

                                table {
                                    page-break-inside: avoid !important;
                                }

                                /* Ensure backgrounds print */
                                * {
                                    -webkit-print-color-adjust: exact !important;
                                    color-adjust: exact !important;
                                }

                                /* Force specific spacing for PDF */
                                .invoice-details-section {
                                    background-color: #f5f5f5 !important;
                                }

                                .invoice-details-cell {
                                    padding: 20px !important;
                                    background-color: #f5f5f5 !important;
                                }

                                /* Ensure table headers have proper background */
                                th {
                                    background-color: #555 !important;
                                    color: white !important;
                                }

                                /* Force red color for balance */
                                .balance-amount {
                                    color: #dc3545 !important;
                                }

                                /* Fix EcoCash positioning for print */
                                .ecocash-section {
                                    position: relative !important;
                                    clear: both !important;
                                    display: block !important;
                                    margin-bottom: 20px !important;
                                    page-break-inside: avoid !important;
                                }

                                .ecocash-table {
                                    position: relative !important;
                                    display: table !important;
                                    border-collapse: collapse !important;
                                    width: 300px !important;
                                    table-layout: fixed !important;
                                }
                            }

                            /* Force table cell spacing for PDF */
                            .invoice-details-section {
                                background-color: #f5f5f5 !important;
                            }

                            .invoice-details-cell {
                                padding: 20px !important;
                            }
                        </style>

                        <!-- Header Section - Table Layout exactly like your HTML -->
                        <table style="width: 100%; margin-bottom: 40px; border-collapse: collapse;">
                            <tr>
                                <!-- Column 1: Action Basin Branding Only -->
                                <td style="width: 200px; vertical-align: top; text-align: center; padding-top: 8px; padding-right: 20px;">
                                    <div style="display: block; text-align: center;">
                                        <!-- Action Basin Logo/Branding -->
                                        <div style="width: 300px !important; height: 100px; margin: 0 auto 10px auto; display: block; position: relative;">
                                            <!-- Use company logo if available, otherwise show Action Basin branding -->
                                            <img t-if="o.company_id.logo"
                                                 t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode('utf-8')"
                                                 style="max-width: 170px;    max-height: 120px;"
                                                 alt="Logo"/>

                                            <!-- Fallback Action Basin text logo if no company logo -->
                                            <div t-if="not o.company_id.logo" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center; border: 2px solid #ccc; border-radius: 8px;">
                                                <div style="font-family: 'Times New Roman', serif; font-size: 16px; font-weight: bold; color: #000; line-height: 0.9; text-align: center;">
                                                    Action<br/>Basin
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <!-- Column 2: Company Details - Flexible width with proper padding -->
                                <td style="vertical-align: top; padding-left: 60px; padding-top: 8px; padding-right: 20px;">
                                    <div style="font-size: 12px; color: #555; line-height: 1.25;">
                                        <!-- Dynamic company name -->
                                        <t t-set="template" t-value="o.invoice_template_id"/>
                                        <span t-if="template and template.company_name_override" t-esc="template.company_name_override"/>
                                        <span t-else="" t-field="o.company_id.name"/>
                                        <br/>

                                        <!-- Dynamic t/a field -->
                                        <t t-if="template and template.show_ta_field and template.ta_field">
                                            t/a <strong><span t-esc="template.ta_field"/></strong><br/>
                                        </t>

                                        <!-- Company address and contact details -->
                                        <span t-if="o.company_id.street" t-field="o.company_id.street"/><br/>
                                        <span t-if="o.company_id.city" t-field="o.company_id.city"/>
                                        <span t-if="o.company_id.state_id">, <span t-field="o.company_id.state_id.name"/></span><br/>
                                        <span t-if="o.company_id.country_id" t-field="o.company_id.country_id.name"/>.<br/>
                                        <span t-if="o.company_id.phone" t-field="o.company_id.phone"/><br/>
                                        <span t-if="o.company_id.mobile" t-field="o.company_id.mobile"/>
                                    </div>
                                </td>

                                <!-- Column 3: Invoice Title and Balance - Fixed width -->
                                <td style="width: 180px; vertical-align: top; text-align: right;">
                                    <h1 style="font-size: 40px; font-weight: bold; color: #000; margin: 0 0 6px 0; line-height: 1; letter-spacing: -1px;">
                                        <t t-if="o.state == 'draft'">QUOTATION</t>
                                        <t t-else="">INVOICE</t>
                                    </h1>
                                    <div style="font-size: 13px; color: #555; margin-bottom: 22px;"># <span t-field="o.name"/></div>
                                    <div style="text-align: right;">
                                        <div style="font-size: 12px; color: #555; margin-bottom: 4px;">Balance Due (USD)</div>
                                        <div class="balance-amount" style="font-size: 20px; font-weight: bold; color: #dc3545;">
                                            <span t-field="o.amount_residual"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>

                        <!-- Invoice Details Section - Table Layout exactly like your HTML -->
                        <table class="invoice-details-section" style="width: 100%; border-collapse: collapse; margin-bottom: 25px; background-color: #f5f5f5;">
                            <tr>
                                <td class="invoice-details-cell" style="padding: 20px; vertical-align: top; width: 50%; background-color: #f5f5f5;">
                                    <h3 style="font-size: 14px; color: #000; margin: 0 0 8px 0; font-weight: bold;">Bill To</h3>
                                    <div style="font-size: 13px; color: #555; line-height: 1.3;">
                                        <strong><span t-field="o.partner_id.name"/></strong><br/>
                                        <span t-if="o.partner_id.street" t-field="o.partner_id.street"/><br/>
                                        <span t-if="o.partner_id.city" t-field="o.partner_id.city"/><br/>
                                        <span t-if="o.partner_id.state_id" t-field="o.partner_id.state_id.name"/><br/>
                                        <span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id.name"/>
                                    </div>
                                </td>
                                <td class="invoice-details-cell" style="padding: 20px; vertical-align: top; text-align: right; font-size: 13px; color: #555; line-height: 1.8; width: 200px; background-color: #f5f5f5;">
                                    <div><strong>
                                        <t t-if="o.state == 'draft'">Quotation Date :</t>
                                        <t t-else="">Invoice Date :</t>
                                    </strong> <span t-field="o.invoice_date"/></div>
                                    <div><strong>Terms :</strong>
                                        <span t-if="o.invoice_payment_term_id" t-field="o.invoice_payment_term_id.name"/>
                                        <span t-else="">Due on Receipt</span>
                                    </div>
                                    <div t-if="o.invoice_representative"><strong>Rep :</strong>
                                        <span t-field="o.invoice_representative"/>
                                    </div>
                                </td>
                            </tr>
                        </table>

                        <!-- Subject Line - Dynamic based on template settings -->
                        <t t-set="template" t-value="o.invoice_template_id"/>
                        <div t-if="template and template.show_subject_field and (o.invoice_subject or o.ref)"
                             style="margin-bottom: 15px; font-size: 13px; color: #000;">
                            <span style="font-weight: normal;">Subject :</span>
                            <span style="font-weight: bold;">
                                <span t-if="o.invoice_subject" t-field="o.invoice_subject"/>
                                <span t-elif="o.ref" t-field="o.ref"/>
                            </span>
                        </div>

                        <!-- Invoice Lines Table -->
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px; border: none;">
                            <thead>
                                <tr>
                                    <th style="background: #555; color: white; padding: 10px 12px; text-align: center; font-size: 13px; font-weight: normal; width: 40px; border: none;">#</th>
                                    <th style="background: #555; color: white; padding: 10px 12px; text-align: left; font-size: 13px; font-weight: normal; border: none;">Item &amp; Description</th>
                                    <th style="background: #555; color: white; padding: 10px 12px; text-align: right; font-size: 13px; font-weight: normal; width: 80px; border: none;">Qty</th>
                                    <th style="background: #555; color: white; padding: 10px 12px; text-align: right; font-size: 13px; font-weight: normal; width: 80px; border: none;">Rate</th>
                                    <th style="background: #555; color: white; padding: 10px 12px; text-align: right; font-size: 13px; font-weight: normal; width: 80px; border: none;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="line_index" t-value="1"/>
                                <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.display_type not in ('line_section', 'line_note'))" t-as="line">
                                    <tr>
                                        <td style="padding: 10px 12px; border-bottom: 1px solid #eee; border-left: none; border-right: none; border-top: none; font-size: 13px; color: #000; vertical-align: top; text-align: center;">
                                            <span t-esc="line_index"/>
                                            <t t-set="line_index" t-value="line_index + 1"/>
                                        </td>
                                        <td style="padding: 10px 12px; border-bottom: 1px solid #eee; border-left: none; border-right: none; border-top: none; font-size: 13px; color: #555; vertical-align: top;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="padding: 10px 12px; border-bottom: 1px solid #eee; border-left: none; border-right: none; border-top: none; font-size: 13px; color: #555; vertical-align: top; text-align: right;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="padding: 10px 12px; border-bottom: 1px solid #eee; border-left: none; border-right: none; border-top: none; font-size: 13px; color: #555; vertical-align: top; text-align: right;">
                                            <span t-field="line.price_unit"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td style="padding: 10px 12px; border-bottom: 1px solid #eee; border-left: none; border-right: none; border-top: none; font-size: 13px; color: #555; vertical-align: top; text-align: right;">
                                            <span t-field="line.price_subtotal"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Totals Section - Table Layout exactly like your HTML -->
                        <div style="margin-bottom: 25px;">
                            <!-- Sub Total Row -->
                            <table style="width: 100%; border-collapse: collapse; margin-bottom: 6px;">
                                <tr>
                                    <td style="width: 70%;"></td>
                                    <td style="width: 100px; text-align: right; font-size: 13px; color: #555; padding-right: 20px;">Sub Total</td>
                                    <td style="width: 68px; text-align: right; font-size: 13px; color: #000;">
                                        <span t-field="o.amount_untaxed"
                                              t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td style="width: 12px;"></td>
                                </tr>
                            </table>

                            <!-- VAT Row -->
                            <table t-if="o.amount_tax" style="width: 100%; border-collapse: collapse; margin-bottom: 6px;">
                                <tr>
                                    <td style="width: 70%;"></td>
                                    <td style="width: 100px; text-align: right; font-size: 13px; color: #555; padding-right: 20px;">VAT</td>
                                    <td style="width: 68px; text-align: right; font-size: 13px; color: #000;">
                                        <span t-field="o.amount_tax"
                                              t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td style="width: 12px;"></td>
                                </tr>
                            </table>

                            <!-- Final Total Row -->
                            <table style="width: 100%; border-collapse: collapse; background: #f5f5f5; margin-top: 8px;">
                                <tr>
                                    <td style="width: 70%;"></td>
                                    <td style="width: 100px; text-align: right; font-size: 14px; color: #000; font-weight: bold; padding: 8px 20px 8px 0;">Total (USD)</td>
                                    <td class="balance-amount" style="width: 68px; text-align: right; font-size: 14px; color: #dc3545; font-weight: bold; padding: 8px 0;">
                                        <span t-field="o.amount_total"
                                              t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td style="width: 12px; padding: 8px 12px 8px 0;"></td>
                                </tr>
                            </table>
                        </div>



                        <!-- Notes Section with horizontal line -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; margin-bottom: 20px;">
                            <tr>
                                <td style="width: 80px; vertical-align: top; padding-top: 8px;">
                                    <h4 style="font-size: 13px; color: #000; margin: 0; font-weight: bold;">Notes</h4>
                                </td>
                                <td style="vertical-align: middle; padding-left: 20px;">
                                    <div style="border-bottom: 1px solid #ccc; height: 1px; width: 100%;"></div>
                                </td>
                            </tr>
                        </table>

                        <!-- Banking Details Section - Dynamic based on template settings -->
                        <t t-set="template" t-value="o.invoice_template_id"/>
                        <table t-if="template and template.show_banking_details" style="width: 100%; border-collapse: collapse; margin-bottom: 15px;">
                            <tr>
                                <!-- Banking Details 1 -->
                                <td style="width: 33%; vertical-align: top; padding-right: 20px;">
                                    <h4 style="font-size: 11px; color: #000; margin: 0 0 8px 0; text-transform: uppercase; font-weight: bold;">
                                        <span t-if="template.usd_banking_title" t-esc="template.usd_banking_title"/>
                                        <span t-else="">Banking Details 1</span>
                                    </h4>
                                    <table style="width: 100%; border-collapse: collapse; font-size: 10px; color: #555; line-height: 1.2;">
                                        <tr t-if="template.usd_bank_name">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Bank</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.usd_bank_name"/></td>
                                        </tr>
                                        <tr t-if="template.usd_account_type" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Account Type</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.usd_account_type"/></td>
                                        </tr>
                                        <tr t-if="template.usd_account_name">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Account Name</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.usd_account_name"/></td>
                                        </tr>
                                        <tr t-if="template.usd_account_number" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Account Number</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.usd_account_number"/></td>
                                        </tr>
                                        <tr t-if="template.usd_branch_code">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Branch Code</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.usd_branch_code"/></td>
                                        </tr>
                                        <tr t-if="template.usd_branch_name" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Branch Name</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.usd_branch_name"/></td>
                                        </tr>
                                        <tr t-if="template.usd_swift_code">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Swift Code</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.usd_swift_code"/></td>
                                        </tr>
                                    </table>
                                </td>

                                <!-- Banking Details 2 -->
                                <td style="width: 33%; vertical-align: top; padding-right: 20px;">
                                    <h4 style="font-size: 11px; color: #000; margin: 0 0 8px 0; text-transform: uppercase; font-weight: bold;">
                                        <span t-if="template.zig_banking_title" t-esc="template.zig_banking_title"/>
                                        <span t-else="">Banking Details 2</span>
                                    </h4>
                                    <table style="width: 100%; border-collapse: collapse; font-size: 10px; color: #555; line-height: 1.2;">
                                        <tr t-if="template.zig_bank_name">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Bank</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.zig_bank_name"/></td>
                                        </tr>
                                        <tr t-if="template.zig_account_type" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Account Type</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.zig_account_type"/></td>
                                        </tr>
                                        <tr t-if="template.zig_account_name">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Account Name</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.zig_account_name"/></td>
                                        </tr>
                                        <tr t-if="template.zig_account_number" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Account Number</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.zig_account_number"/></td>
                                        </tr>
                                        <tr t-if="template.zig_branch_code">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Branch Code</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.zig_branch_code"/></td>
                                        </tr>
                                        <tr t-if="template.zig_branch_name" style="background-color: #f5f5f5;">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px; background-color: #f5f5f5;">Branch Name</td>
                                            <td style="padding: 2px 4px; background-color: #f5f5f5;"><span t-esc="template.zig_branch_name"/></td>
                                        </tr>
                                        <tr t-if="template.zig_swift_code">
                                            <td style="width: 85px; color: #000; font-weight: normal; padding: 2px 4px;">Swift Code</td>
                                            <td style="padding: 2px 4px;"><span t-esc="template.zig_swift_code"/></td>
                                        </tr>
                                    </table>
                                </td>

                                <!-- Terms &amp; Conditions - Dynamic -->
                                <td t-if="template and (template.show_terms_conditions or template.show_eoe)" style="width: 34%; vertical-align: top;">
                                    <h4 t-if="template.show_terms_conditions" style="font-size: 13px; color: #000; margin: 0 0 12px 0; font-weight: bold;">Terms &amp; Conditions</h4>
                                    <div t-if="template.show_terms_conditions and template.terms_conditions" style="font-size: 11px; color: #555; line-height: 1.3; margin-bottom: 12px;">
                                        <span t-esc="template.terms_conditions"/>
                                    </div>
                                    <div t-if="template.show_eoe and (template.eoe_title or template.eoe_text)" style="font-size: 11px; color: #555; line-height: 1.3; margin-bottom: 12px;">
                                        <strong>
                                            <span t-if="template.eoe_title" t-esc="template.eoe_title"/>
                                            <span t-else="">E&amp;OE</span>
                                        </strong>
                                        <span t-if="template.eoe_text">. <span t-esc="template.eoe_text"/></span>
                                    </div>
                                </td>
                            </tr>
                        </table>

                        <!-- EcoCash Section - Dynamic with improved positioning -->
                        <div t-if="template and template.show_ecocash and template.ecocash_number" class="ecocash-section" style="margin-bottom: 20px; clear: both;">
                            <table class="ecocash-table" style="border-collapse: collapse; border: 1.4px solid #333; width: 300px !important; table-layout: fixed; position: relative;">
                                <tr>
                                    <td style="background: #444; color: white; padding: 6px 12px; letter-spacing: 0.5px; font-size: 12px; font-weight: bold; width: 120px; vertical-align: middle; text-align: center;">
                                        <span t-if="template.ecocash_title" t-esc="template.ecocash_title"/>
                                        <span t-else="">ECOCASH</span>
                                    </td>
                                    <td style="background: white; color: #000; padding: 6px 12px; border-left: 1px solid #333; font-size: 12px; font-weight: bold; width: 180px; vertical-align: middle; text-align: center;">
                                        <span t-esc="template.ecocash_number"/>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Footer Section - Dynamic -->
                        <div t-if="template and template.show_footer_message and template.footer_message" style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #ccc;">
                            <div style="font-size: 13px; color: #555;"><span t-esc="template.footer_message"/></div>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>
